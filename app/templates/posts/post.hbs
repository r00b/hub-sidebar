<div class="container">
  <div class="card">
    <div class="card-header">
      {{model.title}}
    </div>
    <div class="card-body">
      <p class="card-text">{{model.body}}</p>
      {{#link-to "posts" class="btn btn-link"}}&lt; Back to posts{{/link-to}}
      <button type="button" class="btn btn-primary" {{action 'updateSidebar'}}>Update sidebar content</button>
    </div>
  </div>
</div>

{{to-elsewhere named="side-panel-item"
               send=(hash
                 content=(component 'sidebar-title'
                   title=sidebarTitle)
               )
}}

{{to-elsewhere named="side-panel-item"
               send=(hash
                 content=(component 'sidebar-nav')
               )
}}