{{#burger-menu
  open=sideBarIsOpen
  animation='slide'
  dismissOnClick=false
  width=500
  as |burger|}}
  {{#burger.menu as |menu|}}
    {{!-- sidebar content goes here --}}
    {{!-- this could be a named outlet or an ember from-elsewhere or a component --}}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button {{action burger.state.actions.close}} class="close">
        <span aria-hidden="true">&times;</span>
      </button>
    </nav>

    {{#if shouldShowGlobalNavBar}}
      <div class="sidebar-content">
        {{outlet "sidebarContent"}}
        <div class="sidebar-tab-controls">
          <button type="button" class="btn btn-light" {{action burger.state.actions.toggle}}>&laquo;&raquo;</button>
        </div>
      </div>
    {{/if}}
  {{/burger.menu}}
  {{#burger.outlet}}
    {{!-- main content goes here --}}
    {{#if shouldShowGlobalNavBar}}
      {{!-- global nav bar --}}
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Global Navbar</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              <button {{action burger.state.actions.toggle}} class="btn btn-light">Menu</button>
            </li>
            <li class="nav-item">
              {{#link-to 'index' class="nav-link"}}
                Home <span class="sr-only">(current)</span>
              {{/link-to}}
            </li>
            <li class="nav-item">
              {{#link-to 'posts' class="nav-link"}}
                Posts
              {{/link-to}}
            </li>
            <li class="nav-item">
              {{#link-to 'layout' class="nav-link"}}
                Layout
              {{/link-to}}
            </li>
          </ul>
        </div>
      </nav>
    {{/if}}

    {{outlet}}
  {{/burger.outlet}}
{{/burger-menu}}

{{outlet}}
